<p id="notice"><%= notice %></p>

<%= form_for(@book, :method => 'delete') do |f| %>
    <h1>Are you sure you want to delete this book?</h1>
    <br />

    <p>
        <strong>Title:</strong>
        <%= @book.title %>
        <br />

        <strong>Author:</strong>
        <%= @book.author %>
        <br />

        <strong>Price:</strong>
        $<%= @book.price %>
        <br />

        <strong>Publish Date:</strong>
        <%= @book.publish_date %>
        <br />
    </p>

    <div class="form-buttons">
        <%= f.submit("Yes, permanently delete.") %>
    </div>
<% end %>

<%= link_to 'Back', books_path %>